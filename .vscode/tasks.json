{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Docker Image",
            "type": "shell",
            "command": "docker",
            "args": [
                "buildx",
                "build",
                "-t",
                "utils-builder",
                "${workspaceFolder}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Go Apps",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--rm",
                "--mount",
                "type=bind,src=${workspaceFolder},dst=/go/src/app/",
                "utils-builder"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}